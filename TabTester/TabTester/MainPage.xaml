<Page
    x:Class="TabTester.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TabTester"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls">

    <Grid HorizontalAlignment="Stretch">
        <winui:TabView x:Name="Tabs"
                       CanCloseTabs="False"
                       CanDragDropTabs="True"
                       
                       AddButtonClick="Tabs_AddButtonClick"

                       AllowDrop="True"
                       TabDraggedOutside="TabView_TabDraggedOutside"
                         
                       DragOver="Tab_DragOver"
                       Drop="Tab_Drop"

                       TabStripDragItemsStarting="Tabs_TabStripDragItemsStarting">
        </winui:TabView>

        <Grid x:Name="CustomDragRegion" Width="200" Height="40" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Right" VerticalAlignment="Top" />
    </Grid>

</Page>
